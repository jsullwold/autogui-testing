{
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "autopep8.args": [
        "--indent-size",
        "3",
        "--max-line-length",
        "200",
        "--experimental",
    ],
}